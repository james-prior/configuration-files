[user]
	name = John Doe
	email = john.doe@example.com

[core]
	autocrlf = input
	safecrlf = true

[alias]
        co = checkout
        ci = commit
        st = status
        br = branch
        hist = log --pretty=format:\"%h %ad %s%d [%an]\" --graph --date=short
        hist = log --pretty=format:\"%h %ad %s%d [%an]\" --graph --date=iso
        type = cat-file -t
        dump = cat-file -p
        df = diff --color
