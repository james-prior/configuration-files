[user]
	name = John Doe
	email = john.doe@example.com

[core]
        # for *nix operating systems
	autocrlf = input
	safecrlf = true
        editor = vim

[alias]
        co = checkout
        ci = commit
        st = status
        br = branch
        hist = log --pretty=format:\"%h %ad %s%d [%an]\" --graph --date=short
        hist = log --pretty=format:\"%h %ad %s%Cred%d%Creset [%an]\" --graph --date=iso --color=always
        hist = log --pretty=format:\"%h %ad %s%d [%an]\" --graph --date=iso
        hist = log --pretty=format:\"%h %ad %s%d [%an]\" --graph --date=format-local:'%Y-%m-%d %H:%M:%S'
        type = cat-file -t
        dump = cat-file -p
        df = diff --color
        dw = diff --color --word-diff
        dm = difftool -t meld
        dy = difftool -t meld -y
